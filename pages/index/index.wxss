/**index.wxss**/
.container {
  padding: 0;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  height: 50px;
  background-color: #42B983;
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 15px;
  position: sticky;
  top: 0;
  z-index: 100;
}

.title {
  font-size: 18px;
  font-weight: bold;
}

.content {
  flex: 1;
  padding: 15px;
  overflow-y: auto;
}

.feature-card {
  background-color: #f0f9f4;
  padding: 20px;
  border-radius: 10px;
  margin-bottom: 20px;
  text-align: center;
}

.feature-title {
  margin-bottom: 15px;
  color: #42B983;
  font-size: 16px;
  font-weight: bold;
}

.feature-desc {
  color: #666;
  font-size: 14px;
  margin-bottom: 20px;
}

.btn {
  background-color: #42B983;
  color: white;
  border: none;
  padding: 10px 20px;
  border-radius: 20px;
  font-weight: bold;
  text-align: center;
  margin: 10px 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-outline {
  background-color: white;
  color: #42B983;
  border: 1px solid #42B983;
}

.icon-camera, .icon-building {
  margin-right: 5px;
}

.history-title {
  margin: 15px 0 10px 0;
  font-weight: bold;
  font-size: 16px;
}

.history-list {
  margin-bottom: 20px;
}

.history-item {
  display: flex;
  padding: 10px 15px;
  border-bottom: 1px solid #efefef;
}

.history-image {
  width: 60px;
  height: 60px;
  background-color: #eee;
  border-radius: 5px;
  margin-right: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
}

.history-info {
  flex: 1;
}

.history-name {
  font-weight: bold;
  margin-bottom: 3px;
}

.history-date {
  font-size: 12px;
  color: #999;
}

.history-tags {
  margin-top: 5px;
}

.tag {
  display: inline-block;
  padding: 4px 8px;
  border-radius: 10px;
  font-size: 12px;
  margin-right: 5px;
  margin-bottom: 5px;
}

.tag-safe {
  background-color: #E8F5E9;
  color: #2E7D32;
}

.tag-warning {
  background-color: #FFF3E0;
  color: #E65100;
}

.tag-danger {
  background-color: #FFEBEE;
  color: #C62828;
}
