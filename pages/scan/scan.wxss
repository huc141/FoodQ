.container {
  padding: 0;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  height: 50px;
  background-color: #42B983;
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 15px;
  position: sticky;
  top: 0;
  z-index: 100;
}

.title {
  font-size: 18px;
  font-weight: bold;
}

.content {
  flex: 1;
  padding: 15px;
  overflow-y: auto;
}

.camera-container {
  height: 300px;
  background-color: #eee;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 10px;
  margin-bottom: 15px;
  overflow: hidden;
}

.camera, .preview-image {
  width: 100%;
  height: 100%;
}

.camera-hint {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.2);
}

.hint-text {
  color: #fff;
  text-align: center;
  margin-top: 10px;
  font-size: 14px;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
}

.hint-text text {
  display: block;
}

.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15px;
}

.btn {
  background-color: #42B983;
  color: white;
  border: none;
  padding: 10px 0;
  border-radius: 20px;
  font-weight: bold;
  text-align: center;
  width: 48%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn icon {
  margin-right: 5px;
}

.btn-outline {
  background-color: white;
  color: #42B983;
  border: 1px solid #42B983;
}

.info-box {
  background-color: #f0f9f4;
  padding: 10px 15px;
  border-radius: 10px;
  margin-bottom: 15px;
  font-size: 14px;
  line-height: 1.4;
  display: flex;
  align-items: center;
}

.info-box icon {
  margin-right: 5px;
  flex-shrink: 0;
}

.info-box text {
  flex: 1;
}

.recent-title {
  font-size: 14px;
  color: #666;
  margin-top: 20px;
  display: flex;
  align-items: center;
}

.recent-title icon {
  margin-right: 5px;
}

.recent-list {
  display: flex;
  white-space: nowrap;
  margin-top: 10px;
}

.recent-item {
  display: inline-block;
  min-width: 80px;
  margin-right: 10px;
  text-align: center;
}

.recent-image {
  width: 80px;
  height: 80px;
  background-color: #eee;
  border-radius: 5px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.recent-name {
  font-size: 12px;
  margin-top: 5px;
  white-space: normal;
  text-align: center;
} 